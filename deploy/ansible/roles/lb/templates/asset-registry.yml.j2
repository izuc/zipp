#jinja2: trim_blocks:True, lstrip_blocks:True
http:
  routers:
    asset-registry-router:
      rule: "Host(`asset-registry.zipp.org`) || Host(`asset-registry.zipp.org`)"
      service: "asset-registry"
      entryPoints:
        - "web"
    asset-registry-router-secure:
      rule: "Host(`asset-registry.zipp.org`) || Host(`asset-registry.zipp.org`)"
      service: "asset-registry"
      entryPoints:
        - "websecure"
      tls:
        certResolver: devops
  services:
    asset-registry:
      loadBalancer:
        servers:
          {% for host in groups['asset_registries'] %}
          - url: "http://{{ host }}:80"
          {% endfor %}
        passHostHeader: false
        sticky:
          cookie: {}
        healthCheck:
          path: /
          interval: "10s"
          timeout: "3s"
